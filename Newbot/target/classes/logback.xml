<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="debug">  <!-- Change from info to debug -->
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
